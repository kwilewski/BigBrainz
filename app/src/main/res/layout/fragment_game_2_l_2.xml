<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tasks.Game2l2Fragment">

    <ImageView
        android:id="@+id/g2_logo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/gl_g2_h_1"
        app:layout_constraintBottom_toTopOf="@+id/gl_g2_h_2"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintLeft_toRightOf="parent" />

    <ImageButton
        android:id="@+id/g2_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/gl_g2_h_3"
        app:layout_constraintBottom_toTopOf="@+id/gl_g2_h_4"
        tools:text="Clickable Area"
        app:layout_constraintLeft_toRightOf="parent"
        android:background="@color/colorButtonWaiting"
        android:src="@drawable/ic_baseline_touch"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_g2_h_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_g2_h_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_g2_h_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.40" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_g2_h_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.80" />

    <TextView
        android:id="@+id/g2_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        tools:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/g2_button" />


</androidx.constraintlayout.widget.ConstraintLayout>