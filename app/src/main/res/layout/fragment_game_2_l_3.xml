<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondary"
    tools:context=".ui.tasks.Game2l3Fragment">

    <ImageView
        android:id="@+id/g2_logo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/gl_g2_h_1"
        app:layout_constraintBottom_toTopOf="@+id/gl_g2_h_2"
        android:src="@drawable/ic_baseline_reaction"
        app:layout_constraintLeft_toRightOf="parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/gl_g2_h_4"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gl_g2_h_3"
        android:id="@+id/frame_g2l3_w_button">
        <ImageButton
            android:id="@+id/g2_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorButtonWaiting"
            android:textAlignment="center"
            android:src="@drawable/ic_baseline_touch"
            />

        <TextView
            android:id="@+id/g2l3_color_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/g2l2Red"
            android:clickable="false"
            tools:text="Clickable Area" />

    </FrameLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_g2_h_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_g2_h_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_g2_h_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.40" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_g2_h_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.80" />

    <TextView
        android:id="@+id/g2_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="14sp"
        android:textColor="?attr/colorPrimaryVariant"
        tools:text="@string/g2l3_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame_g2l3_w_button" />


</androidx.constraintlayout.widget.ConstraintLayout>